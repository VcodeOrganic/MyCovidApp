<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignInActivity">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center|top"
            android:text="Welcome to MyCovidApp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/patient" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center|top"
            android:text="Login to Patient Portal
"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Email/phone"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#FFFEFE"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#FFFEFE"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/btnLoginUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/enter"
            android:fontFamily="@font/abeezee"
            android:text="login
"
            android:textColor="#03ac13"
            app:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/etNewUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center|top"
            android:text="Are you new ? REGISTER NOW"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

</LinearLayout>