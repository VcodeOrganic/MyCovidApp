<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpInstitute"
    android:background="@drawable/gradient_background_2"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center|top"
            android:text="Welcome to MyCovidApp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/hospital_vector" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center|top"
            android:text="Join us to list your Institute
"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/etInstiName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Institute Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:shadowColor="#FFFFFF"
            android:textColor="#FFFEFE"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/etInstiPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Institute Landline no."
            android:inputType="phone"
            android:padding="10dp"
            android:shadowColor="#FFFFFF"
            android:textColor="#FFFEFE"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/etInstiEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Institute email address"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#FFFEFE"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/etInstiPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Set Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#FFFEFE"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/etInstiPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Pincode"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#FFFEFE"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/etInstiAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:fontFamily="@font/abeezee"
            android:hint="Institute address"
            android:inputType="textPostalAddress"
            android:padding="10dp"
            android:textColor="#FFFEFE"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/btnRegisterInsti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/edit"
            android:fontFamily="@font/abeezee"
            android:text="register"
            android:textColor="#03ac13"
            app:backgroundTint="@color/white" />


        <TextView
            android:id="@+id/etExistingInsti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/abeezee"
            android:gravity="center|top"
            android:text="Already registered ? LOG IN"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>